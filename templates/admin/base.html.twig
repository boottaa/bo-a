{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .adm-menu{
            position: fixed;
            top: 0px;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 55px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            overflow-y: auto;
        }
        .adm-menu .nav-link{
            font-weight: 500;
            color: #333;
        }
        .adm-menu .nav-link.active{
            background: rgba(0, 0, 0, .1);
        }
    </style>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-1 d-none d-lg-block bg-light adm-menu">
            <div class="sidebar-sticky">
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Меню</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'adm_news' ? 'active' }}" href="{{ path('adm_news') }}">
                            Новости
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'adm_index' ? 'active' }}" href="{{ path('adm_index') }}">
                            Профиль
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'adm_likes' ? 'active' }}" href="{{ path('adm_likes') }}">
                            Избранное
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Комментарии
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Настройки
                        </a>
                    </li>


                </ul>
            </div>
        </div>
    </div>
    {% block adm_body %}{% endblock %}
{% endblock %}

{% block footer %}

{% endblock %}