<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}Welcome to sonata project!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('statics/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <script src="{{ asset('statics/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('statics/js/bootstrap.bundle.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="/">Sonata</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item {{ app.request.get('_route') == 'index' ? 'active' }}">
                                <a class="nav-link" href="{{ path('index') }}">О нас</a>
                            </li>
                            <li class="nav-item {{ app.request.get('_route') == 'news_index' ? 'active' }}">
                                <a class="nav-link" href="{{ path('news_index') }}">Новости</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Сообщество</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Документация</a>
                            </li>
                        </ul>
                        <form class="form-inline">
                            <ul class="navbar-nav mr-auto">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    {% if is_granted('ROLE_USER') %}
                                        <li class="nav-item">
                                            <a class="nav-link {{ app.request.get('_route') == 'adm' ? 'active' }}" href="{{ path('adm') }}">Профиль</a>
                                        </li>
                                    {% endif %}
                                    <li class="nav-item">
                                        <a class="nav-link {{ app.request.get('_route') == 'security_logout' ? 'active' }}" href="{{ path('security_logout') }}">Выйти</a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link {{ app.request.get('_route') == 'security_login' ? 'active' }}" href="{{ path('security_login') }}">Войти</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
        <br >
        {% block body %}{% endblock %}
        {% block footer %}
            <footer class="footer">
                <div class="container">
                    <span class="text-muted">Copirate: {{ "now"|date("Y") }} </span>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>
